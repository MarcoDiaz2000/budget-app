<div class="phone-border">
  <div class="container d-flex flex-column align-items-center" style="min-height: 70vh; padding-bottom: 10vh;">
    <div class="text-center w-100 mb-auto" style="max-width: 400px;">
      <h1 class="mt-0 mb-5"></h1>
      <%= image_tag("logo.png", class: "img-fluid") %>
    </div>

    <div class="w-100 d-flex flex-column align-items-center mt-auto">
      <% if user_signed_in? %>
        <%= form_with url: destroy_user_session_path, method: :delete do %>
          <%= submit_tag 'Logout', class: "btn btn-primary w-100" %>
        <% end %>
      <% else %>
        <div class="w-100">
          <%= link_to "LOG IN", new_user_session_path, class: "btn btn-primary w-100", style: "background-color: #3778c2; color: white;" %>
        </div>
        <div class="w-100 mt-2">
          <%= link_to "SIGN UP", new_user_registration_path, class: "btn btn-outline-dark w-100", style: "color: #434b54; border-color: #434b54;" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
