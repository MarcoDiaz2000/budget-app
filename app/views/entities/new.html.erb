<div class="phone-border">
  <div class="flex-column align-items-centerd-flex flex-column align-items-center" style="min-height: 70vh; padding-bottom: 10vh; max-width: 100%!important;">
  <%= form_with(model: [@group, @entity]) do |form| %>
    <!-- Barra superior azul -->
    <div class="w-100 bg-primary text-white text-center d-flex justify-content-between align-items-center" style="height: 50px;">
      <%= link_to groups_path, class: "text-white ml-3" do %>
        <i class="fas fa-arrow-left" style="margin-left: 5px;"></i>
      <% end %>
      <span>NEW TRANSACTION</span>
      <%= form.submit "Save", class: "text-white mr-3 bg-transparent border-0", style: "cursor: pointer;" %>
    </div>

    <!-- Formulario -->
    <div class="w-100 mt-auto mb-auto" style="max-width: 100%!important;">
      <div class="form-group">
        <%= form.text_field :name, autofocus: true, class: "form-control", placeholder: "Name of transaction" %>
      </div>

      <div class="form-group">
        <%= form.number_field :amount, class: "form-control", placeholder: "Amount" %>
      </div>

<div class="form-group custom-dropdown">
  <label for="category-select" class="control-label">Select Category</label>
  <div class="options">
<%= select_tag 'entity[group_ids]', options_for_select(@groups.map { |g| [g.name, g.id] }, @entity.group_ids), id: 'group_select', class: "form-control", multiple: true %>
  </div>
</div>

  <% end %>
</div>

</div>